<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="17dp"
    android:layout_marginStart="17dp"
    android:layout_marginEnd="17dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="3.5dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_report"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignBottom="@id/img_report"
            android:src="@drawable/shadow_img" />

        <LinearLayout
            android:id="@+id/ll_title_and_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_report"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"

            >

            <TextView
                android:text="Foto kerusakan"
                android:gravity="start"
                android:id="@+id/tvNamaHewan"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_gravity="top|start"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="17sp"
                android:textAlignment="textStart"
                android:maxLines="1"
                android:lines="2"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|center_vertical"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvdatetime"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Sen, 10-10-10"
                android:layout_marginEnd="12dp"
                android:maxLines="1"
                android:lines="2"
                android:gravity="end"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/montserrat_medium"
                android:layout_gravity="top|center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_title_and_time"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Komentar : " />

            <TextView
                android:id="@+id/tv_kom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:background="#EEEEEE"
            android:layout_below="@id/ll_com" />


        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/line"
            android:layout_marginBottom="17dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lat_inp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/rada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="start"
                android:text=": Latitude" />

            <TextView
                android:id="@+id/tv_longi_inp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:text=": Longitude"
                android:gravity="end" />
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>