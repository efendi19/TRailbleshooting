<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_aboutUs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="9dp"
                app:cardElevation="3.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_ptkai_notext" />

                    <TextView
                        android:id="@+id/tv_nameApp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/logo"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="TRailbleshoot"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_nameApp"
                        android:layout_marginStart="15dp"
                        android:layout_toRightOf="@id/logo"
                        android:text="Group X" />

                    <ImageView
                        android:id="@+id/ic_version"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/logo"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_version" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/logo"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@id/ic_version"
                        android:text="Version 1.0.2" />

                    <LinearLayout
                        android:id="@+id/ly_aboutApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ic_version"
                        android:layout_marginTop="13dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ic_aboutApp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/logo"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="13dp"
                            android:src="@drawable/ic_aboutapp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/logo"
                            android:layout_toRightOf="@id/ic_version"
                            android:text="About Application"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right" />


                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="9dp"
                app:cardElevation="3.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/montserrat_bold" />


                    <LinearLayout
                        android:id="@+id/ll_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/tvTo"
                        android:layout_marginTop="9dp">


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/logo"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/logo"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="3dp"
                            android:layout_toRightOf="@id/ic_version"
                            android:text="Matakuliah Sistem Informasi Enterprise (SIE)" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_to"
                        android:layout_marginTop="13dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/logo"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="13dp"
                            android:src="@drawable/ic_place" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/logo"
                            android:layout_toRightOf="@id/ic_version"
                            android:text="Sekolah Tinggi Teknologi Bandung"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right" />


                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="9dp"
                app:cardElevation="3.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvDev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Developers"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/montserrat_bold" />


                    <LinearLayout
                        android:id="@+id/ll_Dev"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/tvDev"
                        android:layout_marginTop="5dp">


                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_below="@id/logo"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/logo"
                            android:layout_marginStart="13dp"
                            android:layout_toRightOf="@id/ic_version"
                            android:text="Agung Hermawan - Efendi - Fachrul Hidayat" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_thx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_Dev"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Thanks to" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_thx"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_below="@id/logo"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="13dp"
                            android:src="@drawable/ic_place" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/logo"
                            android:layout_toRightOf="@id/ic_version"
                            android:text="GitHub, Stackoverflow, YouTube, Google, Firebase, Material X,Adobe XD, Android Studio"
                            android:layout_weight="1"
                            android:maxLines="2"
                            android:lines="2" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerSalur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarSalurkan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarSalurkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="8dp"
            android:minHeight="?android:attr/actionBarSize">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_back_aboutUs"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_back"
                    android:background="@drawable/ripple_effect"
                    android:layout_marginEnd="7dp" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>